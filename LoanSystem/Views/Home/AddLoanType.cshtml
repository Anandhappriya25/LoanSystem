@using LoanSystem.Models
@model LoanType

@if (Model == null)
{
    <div class="text-primary" align="center"><h2>Add LoanType</h2> </div>
}
else
{
    <div class="text-warning" align="center"><h2>Edit LoanType</h2></div>
}
<style>
    .required:after {
        content: " *";
        color: red;
    }
</style>
@using (Html.BeginForm(FormMethod.Post, new { id = "AddLoanType" }))
{
    <div class="container border rounded bg-light text-dark w-50 pt-2">
        @Html.HiddenFor(x=>x.LoanTypeId, new{@class="form-control"})

        <div class="mb-3 row justify-content-center">
            <div class="col-3">
                <label class="required">Loan Name:</label>
            </div>
            <div class="col-4">
                @Html.TextBoxFor(x=>x.LoanName, new {@class="form-control", required = "required" , maxlength = "15"})
            </div>
        </div>
        <div class="mb-3 row justify-content-center">
            <div class="col-3">
                <label class="form-label required">Duration:</label>
            </div>
            <div class="col-4">
                @Html.TextBoxFor(x=>x.Duration, new {@class="form-control", required = "required" , maxlength = "10"})
            </div>
        </div>
        <div class="mb-3 row justify-content-center">
            <div class="col-3">
                <input type="submit" class="btn btn-success" value="Submit" />
            </div>
        </div>
    </div>
}
