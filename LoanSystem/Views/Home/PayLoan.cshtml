@using LoanSystem.Models
@model LoanDetails

@if (Model == null)
{
    <div class="text-primary" align="center"><h2>Pay Loan</h2> </div>
}
else
{
    <div class="text-warning" align="center"><h2>Update PayedLoan</h2></div>
}

@using (Html.BeginForm(FormMethod.Post, new { id = "PayLoan" }))
{
    <div class="container bg-info w-50 rounded pt-4">
        @Html.HiddenFor(x=>x.LoanDetailsId, new{@class="form-control"})
        @*<div class="mb-3 row justify-content-center">
            <div class="col-2">
                <label class="form-label"> LoanDetailsId:</label>
            </div>
            <div class="col-2">
                @Html.DisplayFor( x=>x.LoanDetailsId, new{@class="form-control"})
                @Html.HiddenFor(x=>x.LoanDetailsId, new{@class="form-control"})
            </div>
        </div>*@
        <div class="mb-3 row justify-content-center">
            <div class="col-2">
                <label class="form-label">LoanId:</label>
            </div>
            <div class="col-3">
                @Html.TextBoxFor(x=>x.LoanId, new {@onChange="getDetails()", @class="form-control", required = "required" })
            </div>
            <div id="details" style="background:red;display:none;height:100px">
                <div><label class="form-label">Paid Amount:</label><label id="paidAmount" class="form-label"></label></div>
            </div>
        </div>
        <div class="mb-3 row justify-content-center">
            <div class="col-2">
                <label class="form-label">Paid Amount:</label>
            </div>
            <div class="col-3">
                @Html.TextBoxFor(x=>x.PaidAmount, new {@class="form-control", required = "required" , maxlength = "10"})
            </div>
        </div>
        <div class="mb-3 row justify-content-center">
            <div class="col-2">
                <input type="submit" class="btn btn-outline-success" value="Submit" />
            </div>
        </div>
    </div>
}


<table class="table table-striped table-bordered" id="loanList" >
    <thead style="background-color:antiquewhite;">
        <tr>
            <th class="text-center">LoanId</th>
            <th class ="text-center">LoanName</th>
            <th class="text-center">CustomerName</th>
            <th class="text-center">DateOfSanction</th>
            <th class="text-center">LoanAmount</th>
            <th class="text-center">PaidAmount</th>
            <th class="text-center">BalanceAmount</th>
            <th class="text-center">Status</th>
        </tr>
    </thead>
    <tbody>

    </tbody>
</table>