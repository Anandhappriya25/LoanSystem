@using LoanSystem.Models
@model CustomerDTO

<h2 class ="text-primary" align="center">Customer Detail</h2>
@using (Html.BeginForm())
{
    <div class="container border rounded bg-light text-dark w-50 pt-2">
        <div class="mb-3 row justify-content-center">
            <div class="col-3">
                <label class="required">Customer Id:</label>
            </div>
            <div class="col-4">
                @Html.TextBoxFor(x=>x.CustomerId, new{@class="form-control",disabled="disabled"})
            </div>
        </div>
        
        <div class="mb-3 row justify-content-center">
            <div class="col-3">
                <label class="required">Customer Name:</label>
            </div>
            <div class="col-4">
                @Html.TextBoxFor(x=>x.CustomerName, new {@class="form-control",disabled="disabled"})
            </div>
        </div>
        <div class="mb-3 row justify-content-center">
            <div class="col-3">
                <label class="required">Mobile Number:</label>
            </div>
            <div class="col-4">
                @Html.TextBoxFor(x=>x.MobileNumber, new {@class="form-control",disabled="disabled"})
            </div>
        </div>
        <div class="mb-3 row justify-content-center">
            <div class="col-3">
                <label class="required">Aadhar Number:</label>
            </div>
            <div class="col-4">
                @Html.TextBoxFor(x=>x.AadharNumber, new {@class="form-control",disabled="disabled"})
            </div>
        </div>
        <div class="mb-3 row justify-content-center">
            <div class="col-3">
                <label class="required">Email Id:</label>
            </div>
            <div class="col-4">
                @Html.TextBoxFor(x=>x.EmailId, new {@class="form-control",disabled="disabled"})
            </div>
        </div>
        <div class="mb-3 row justify-content-center">
            <div class="col-3">
                <label class="required">Password:</label>
            </div>
            <div class="col-4">
                @Html.TextBoxFor(x=>x.Password, new {@class="form-control",disabled="disabled"})
            </div>
        </div>
        @*<div class="mb-3 row justify-content-center">
            <div class="col-3">
                <label class="required">Role Name:</label>
            </div>
            <div class="col-4">
                @Html.DropDownListFor(x=>x.RoleId,Model.Roles,new {@class="form-control",disabled="disabled"})
            </div>
        </div>*@
    </div>
}