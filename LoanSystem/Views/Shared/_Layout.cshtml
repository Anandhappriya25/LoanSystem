<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LoanSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LoanSystem.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        @await Html.PartialAsync("_MenuBar")
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - LoanSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/addcustomer.js"></script>
    <script src="~/js/addloan.js"></script>
    <script src="~/js/addloantype.js"></script>
    <script src="~/js/customerdelete.js"></script>
    <script src="~/js/deleteloantype.js"></script>
    <script src="~/js/payloan.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
